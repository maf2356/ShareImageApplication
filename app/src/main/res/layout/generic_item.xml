<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="cys.share.image.entity.User"></import>
        <import type="cys.share.image.auxiliary.ShareImageAuxiliaryTool"></import>
        <variable
            name="item"
            type="cys.share.image.entity.TContent"/>
        <variable
            name="coverUrl"
            type="String"/>

        <variable
            name="listener"
            type="cys.share.image.listener.ShareImageEventListener"></variable>
        <variable
            name="avatarUrl"
            type="String"/>
        <variable
            name="activity"
            type="android.support.v4.app.FragmentActivity"></variable>
    </data>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="2dp"
    android:id="@+id/card"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_info_title_height">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:civ_border_width="1dp"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentLeft="true"
                app:loadAvatar="@{avatarUrl}"
                android:id="@+id/avatar"
                app:civ_border_color="#c2636161"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.user.nickName}"
                android:layout_marginLeft="@dimen/user_info_margin"
                android:id="@+id/userName"
                android:textSize="@dimen/user_info_nick_text_size"
                android:textStyle="bold"
                android:layout_alignTop="@+id/avatar"
                android:layout_toEndOf="@+id/avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{ShareImageAuxiliaryTool.transformationTime(item.createTime)}"
                android:textSize="@dimen/user_info_create_time_text_size"
                android:layout_alignBottom="@+id/avatar"
                android:layout_alignStart="@+id/userName" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/app_margin_small"
            android:layout_marginBottom="@dimen/app_margin_small"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@{item.shortContent}"
            />

        <ImageView
            android:id="@+id/coverImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:imageUrl="@{coverUrl}"
            android:scaleType="fitCenter"
            android:src="@mipmap/img_default"
            android:onClick="@{(view)->listener.showLargeView(view,activity,item)}"
            app:width="@{item.cover.width}"
            app:height="@{item.cover.height}"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_info_other"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/user_info_hints"
                android:textColor="@android:color/darker_gray"
                android:text="@{ShareImageAuxiliaryTool.showLikeCountAndCommentCount(item.likeCount,item.commentCount)}"></TextView>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView >
</layout>